doi = {10.1088/0029-5515/38/3/303},
file = {:C$\backslash$:/Users/joe/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/1998 - Loarte et al. - Plasma detachment in JET Mark I divertor experiments.pdf:pdf},
isbn = {0029-5515},
